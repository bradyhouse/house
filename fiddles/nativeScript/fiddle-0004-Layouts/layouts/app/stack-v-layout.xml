<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <ActionBar title="Stack Vertical Layout"/>
  <StackLayout orientation="vertical">
      <Label text="Blue" style="background-color: blue" textWrap="true" cssClass="white"/>
      <Label text="Green" style="background-color: green" cssClass="green" textWrap="true"/>
      <Label text="Red" style="background-color: red" cssClass="red" textWrap="true"/>
      <Label text="Yellow" style="background-color: yellow" cssClass="yellow"/>
      <Label text="Orange" style="background-color: orange" textWrap="true"/>
      <Label text="Purple" style="background-color: purple" textWrap="true"/>
      <Label text="Pink" style="background-color: pink" textWrap="true"/>
      <Label text="Black" style="background-color: black" cssClass="white"/>
    </StackLayout>
</Page>