<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <ActionBar title="Grid Layout"/>
  <GridLayout rows="auto,auto,auto,auto" columns="*,*,*,*">
      <Label row="0" colSpan="4" text="This is a Shade 1 Test" style="background-color: #d0d0d0"/>
      <Label row="3" colSpan="3" text="This is a Shade 2 Test" style="background-color: #b0b0b0" cssClass="green"/>
      <Label row="1" col="0" colSpan="1" text="This is a Shade 3 test" style="background-color: #909090" cssClass="red" textWrap="true"/>
      <Label row="1" col="2" colSpan="2" text="This is a Black Test" style="background-color: #000000" cssClass="white"/>
      <Label row="2" col="0" colSpan="2" text="This is a Light Black Test" style="background-color: #303030" cssClass="white"/>
      <Label row="2" col="2" colSpan="2" text="This is a Shade 4 Test" style="background-color: #505050" cssClass="white"/>
    </GridLayout>
</Page>