<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <ActionBar title="Dock Layout"/>
  <DockLayout stretchLastChild="true">
      <Label dock="bottom" text="Dock Bottom" style="background-color: green" cssClass="green"/>
      <Label dock="left" text=" Left " style="background-color: red" cssClass="red" textWrap="true"/>
      <Label dock="top" text="Dock Top" style="background-color: blue"/>
      <Label dock="right" text="Right" style="background-color: yellow" textWrap="true" cssClass="yellow"/>
      <Label text="Center/Fill" style="background-color: orange" textWrap="true"/>
    </DockLayout>
</Page>