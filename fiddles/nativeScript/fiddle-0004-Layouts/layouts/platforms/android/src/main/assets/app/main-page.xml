<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <ActionBar title="Layout Demo"/>
  <StackLayout>
    <!-- This file is never loaded as their is a specific .land and .port version of this page -->
    <StackLayout orientation="horizontal"><Label text="Files loaded: main-page.xml and"/><Label text="{{source}}"/></StackLayout>
    <StackLayout orientation="horizontal"><Label text="Show layouts in Black &amp; White"/><Switch id="Color" /></StackLayout>
    <Button text="Stacked Horizontal" tap="stackH" />
    <Button text="Stacked Vertical" tap="stackV" />
    <Button text="Absolute Layout" tap="absolute" />
    <Button text="Dock Layout" tap="dock" />
    <Button text="Grid Layout" tap="grid" />
    <Button text="Wrap Layout" tap="wrap" />
    <Button text="Dialogs" tap="dialogs" />
  </StackLayout>
</Page>